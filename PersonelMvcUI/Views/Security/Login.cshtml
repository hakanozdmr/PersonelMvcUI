@model PersonelMvcUI.Models.EntittyFramework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/Login.js"></script>
<link href="~/Content/login.css" rel="stylesheet" />
<br />
<br />
<h2 style="font-weight: bold; color: orange;">Personel Yönetim Sistemine Hoşgeldiniz.</h2>
<h2 style="font-weight: bold; color: orange">Lütfen Giriş Yapınız...</h2>
<div class="container">

    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">

        <div class="center">
            <br><br />
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title text-center" style="font-weight: bolder; ">Giriş Yapınız</div>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                {
                    <form name="form" id="form" class="form-horizontal" enctype="multipart/form-data" method="POST">

                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="user" type="text" class="form-control" name="ad" value="" placeholder="Kullanıcı Adı">
                        </div>
                        <br />
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="password" type="password" class="form-control" name="sifre" placeholder="Şifre">
                        </div>
                        <div class="form-group">
                            <br><br />
                            <div class="col-sm-12 controls">
                                <button type="submit" href="#" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-log-in"></i> Giriş Yap</button>
                            </div>
                        </div>
                       
                        @Html.ValidationSummary()
                    </form>
                }


            </div>
        </div>
    </div>
</div>

<div id="particles"></div>


</html>
